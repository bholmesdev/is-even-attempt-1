---
import 'open-props/normalize';
import 'open-props/style';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="stylesheet" href="/fonts.css" />
	<title>{title}</title>
</head>
<body>
  <main id="swup">
    <slot />
  </main>
  <script>
    import Swup from 'swup';
    import SwupFormsPlugin from '@swup/forms-plugin';
    import SwupA11yPlugin from '@swup/a11y-plugin';
    new Swup({
      plugins: [new SwupFormsPlugin(), new SwupA11yPlugin()],
    });
  </script>
</body>
</html>

<style>

  :root {
    --brand-light: hsl(274, 100%, 38%);

    --text1-light: var(--gray-9);
    --text2-light: var(--gray-8);

    --surface1-light: var(--gray-0);
    --surface2-light: var(--indigo-0);

    --brand: var(--brand-light);
    --text-1: var(--text1-light);
    --text-2: var(--text2-light);
    --surface-1: var(--surface1-light);
    --surface-2: var(--surface2-light);
  }

  html {
    font-family: 'HK Grotesk';
    font-size: var(--font-size-base);
    color: var(--color-text);
  }

  html, body, main {
    height: 100%;
  }

  :global(.visually-hidden) {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
